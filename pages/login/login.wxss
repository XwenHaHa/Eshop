.sign .otherlogin {
  display: flex;
  justify-content: center;
  position: absolute;
  top: 450rpx;
  margin-top: 6.75rem;
  padding-bottom: 2rem;
  width: 100%;
  color: rgba(51, 51, 51, 0.6);
}

.sign .myimage {
  position: absolute;
  top: 800rpx;
  left: 140rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.sign .myimage li {
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx;
  text-align: center;
}

.sign .myimage li image {
  width: 100%;
  height: 100%;
}