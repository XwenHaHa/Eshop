/* pages/index/index.wxss */
.swiper-container {
  height: 200px;
}

.swiper-container swiper-item {
  text-align: center;
  line-height: 200px;
}

.swiper-container swiper-item image {
  width: 100%;
  height: 100%;
}

.icon-box ul {
  display: flex;
}

.icon-box ul li {
  position: relative;
  border-radius: 5%;
  width: 100px;
  height: 100px;
  margin: 0 2px;
  box-shadow: 0 0 1px 1px rgba(0, 1, 1, .1);
  text-align: center;
  line-height: 100px;
}

.icon-box ul li van-icon {
  font-size: 30px;
}

.icon-box ul li span {
  display: block;
  margin-top: -70px;
}

.adver {
  width: 100%;
  height: 200px;
  background-color: #fff;
  font-size: 16px;
  color: #fff;
  text-align: center;
  position: relative;
}

.adver .atop {
  position: absolute;
  top: 20px;
  left: 50%;
  border: 1px solid #ccc;
  border-radius: 5px;
  transform: translateX(-175px);
  width: 350px;
  height: 40px;
  line-height: 40px;
  background-color: #d60708;
}

.adver .abottom {
  position: absolute;
  top: 70px;
  left: 50%;
  border: 1px solid #ccc;
  border-radius: 20px 20px 20px 20px;
  transform: translateX(-175px);
  width: 350px;
  height: 100px;
  background-color: #06a4df;
}

.adver .abottom h5 {
  display: block;
  margin: 5px;
  padding: 0;
}

.adver .abottom p {
  display: block;
  margin: 5px;
  padding: 0;
}

.goods {
  width: 100%;
  height: 100px;
}

.goods ul {
  display: flex;
  justify-content: space-around;
}

.goods ul li {
  width: 100px;
  height: 100px;
  border: 5px solid #eee;
  box-shadow: 0 0 1px 1px rgba(0, 0, 0, .2);
  border-radius: 5px;
  margin: 5px;
  /* background-color: pink; */
}

.goods ul li image {
  width: 100%;
  height: 100%;
}